{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["dom", "ES2023"],
		"jsx": "preserve",
		"jsxImportSource": "@htmlplus/element",
		"experimentalDecorators": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"]
		},
		"declaration": true,
		"declarationDir": "dist/types",
		"outDir": "dist",
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"allowUnreachableCode": false
	},
	"include": ["src"],
	"exclude": ["dist", "node_modules", "**/*.e2e.ts"]
}
